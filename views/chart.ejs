<!DOCTYPE html>
<html>
<head>
    <title>Food Tracker</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <canvas id="myChart"></canvas>
    <script>

      // var randomColorGenerator = function () { 
      //     return '#' + (Math.random().toString(16) + '0000000').slice(2, 8); 
      // };

      var ctx = document.getElementById('myChart').getContext('2d');
      const foodNames = <%- JSON.stringify(lbl) %>;
      const values = <%- JSON.stringify(dt) %>;

      var myChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
          labels: foodNames,
          datasets: [{
            label: 'Protein',
            data: values,
            backgroundColor: [
            'rgba(255, 99, 132, 0.2)',
            'rgba(54, 162, 235, 0.2)',
            'rgba(255, 206, 86, 0.2)',
            'rgba(75, 192, 192, 0.2)',
            'rgba(153, 102, 255, 0.2)',
            'rgba(255, 159, 64, 0.2)',
            'rgba(128, 128, 128, 0.2)',
            ],
              borderColor: [
              'rgba(255, 99, 132, 1)',
              'rgba(54, 162, 235, 1)',
              'rgba(255, 206, 86, 1)',
              'rgba(75, 192, 192, 1)',
              'rgba(153, 102, 255, 1)',
              'rgba(255, 159, 64, 1)',
              'rgba(128, 128, 128, 1)',
              ],
              borderWidth: 1
          }]
      },
      options: {
          responsive: true,
          maintainAspectRatio: false,
          title: {
              display: true,
              text: 'Calories for Today'
          },
          legend: {
              display: true,
              position: 'right',
              labels: {
                  fontColor: '#333',
                  fontSize: 14
              }
          },
          animation: {
              animateScale: true,
              animateRotate: true
          }
      }
      });
    </script>
</body>
</html>